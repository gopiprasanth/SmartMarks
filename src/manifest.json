{
  "manifest_version": 3,
  "name": "SmartMarks",
  "version": "1.0.0",
  "description": "Intelligent bookmark manager with advanced organization features",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
