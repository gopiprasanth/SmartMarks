{
  "manifest_version": 3,
  "name": "SmartMarks",
  "version": "1.0.0",
  "description": "A smart bookmark manager for Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/globe.png",
      "48": "icons/globe.png",
      "128": "icons/globe.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "bookmarks"
  ],
  "icons": {
    "16": "icons/globe.png",
    "48": "icons/globe.png",
    "128": "icons/globe.png"
  }
}
